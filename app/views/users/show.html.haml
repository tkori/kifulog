%h1 プロフィール

%table.table.table-hover
  %tbody
    %tr
      %th ユーザー名
      %td= @user.name
    %tr
      %th メールアドレス
      %td= @user.email
    %tr
      %th 自己紹介
      %td= @user.description

- unless current_user == @user
  .follow_form
    - if current_user.following?(@user)
      = form_for(current_user.following_relationships.find_by(following_id: @user.id), html: { method: :delete }) do |f|
        = f.submit "フォロー解除する", class: "btn btn-large btn-danger follow-btn"
    - else
      = form_for(current_user.following_relationships.build(following_id: @user.id)) do |f|
        = f.hidden_field :following_id
        = f.submit "フォローする", class: "btn btn-large btn-primary follow-btn"
  
= link_to 'プロフィールを編集する', edit_user_path, class: 'btn btn-primary mr-3'
= link_to 'アカウントを削除する', @user, method: :delete, data: { confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger'